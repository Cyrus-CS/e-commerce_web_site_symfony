{% extends 'base.html.twig' %}

{% block title %}{{ title ~ description }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="text-center mb-4">Découvrez la liste des catégories</h2>

    {# Bouton de création de catégorie placé en évidence #}
    <div class="text-center mb-3">
        <p class="lead">Ajoutez une nouvelle catégorie pour enrichir votre liste.</p>
        <a href="{{ path('admin.category.create') }}" class="btn btn-success btn-sm">Créer une catégorie</a>
    </div>

    {% if categories|length > 0 %}
        <div class="table-responsive container">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#ID</th>
                        <th scope="col">Nom de la catégorie</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for cat in categories %}
                        <tr>
                            <td>{{ cat.id }}</td>
                            <td>{{ cat.name }}</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" href="{{ path('admin.category.update', { id: cat.id }) }}">Modifier</a>
                                <a class="btn btn-sm btn-outline-danger" href="{{ path('admin.category.delete', { id: cat.id }) }}">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {# Affichage de la pagination #}
        <div class="d-flex justify-content-center mt-3">
            {{ knp_pagination_render(categories) }}
        </div>
    {% else %}
        <div class="alert alert-warning text-center" role="alert">
            Aucune catégorie trouvée !
        </div>
    {% endif %}
</div>
{% endblock %}
