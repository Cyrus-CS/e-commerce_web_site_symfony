{% extends 'base.html.twig' %}

{% block title %}Liste de produit{% endblock %}

{% block body %}
<div class="container mb-4">
    <h1 class="text-center mb-3">Liste de vos Produits enregistrés</h1>
    <div class="table-responsive p-4">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <td>{{ produit.id }}</td>
                    <td>{{ produit.name }}</td>
                    <td>{{ produit.description }}</td>
                    <td>{{ produit.price }}</td>
                    <td> 
                        {% if produit.stock %}
                            {{ produit.stock }}
                        {% else %}
                            <span class="text-danger">stock épuisé </span>
                        {% endif %}
                    </td>
                    <td>
                        <a class="btn btn-success sm" href="{{ path('app_produit_show', {'id': produit.id}) }}">Afficher</a>
                        <a class="btn btn-warning sm" href="{{ path('app_produit_edit', {'id': produit.id}) }}">Modifier</a>
                        <a class="btn btn-primary sm" href="{{ path('add_product_stock', {'id' : produit.id }) }}">Ajouter le stock</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun produit trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
            <a class="btn btn-primary" href="{{ path('app_produit_new') }}">Créez un nouveau produit</a>
    </div>
</div>
{% endblock %}
