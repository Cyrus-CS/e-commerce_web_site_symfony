{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <table class='table'>
            <tr>
                <th>#ID</th>
                <th>#QUANTITE</th>
                <th>#DATE D'AJOUT</th>
            </tr>
            {% for productAdded in productsAdded %}
                <tr>
                    <td>{{ productAdded.id }}</td>
                    <td>{{ productAdded.qte }}</td>
                    <td>{{ productAdded.createdAt | date('d-m-y h-i-s') }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}